<% layout('layouts/boilerplate') %>

<div class="row">
  <h1 class="text-center">New Bathroom</h1>
  <div class="col-6 offset-3">
    <form
      method="POST"
      action="/bathrooms"
      novalidate
      class="validatedForm"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label class="form-label" for="title">Title:</label>
        <input
          class="form-control"
          type="text"
          name="bathroom[title]"
          placeholder="Bathroom title"
          id="title"
          required
        />
        <div class="valid-feedback">Looks Good!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          name="bathroom[location]"
          placeholder="City, State"
          required
        />
        <div class="valid-feedback">Looks Good!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="occupancy">Occupancy Type</label>
        <select class="form-control" name="bathroom[occupancy]" required>
          <option value=""></option>
          <% for (occupancy of occupancies) { %>
          <option value="<%= occupancy %>"><%= occupancy %></option>
          <% } %>
        </select>
        <div class="valid-feedback">Looks Good!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          name="bathroom[description]"
          id=""
          cols="30"
          rows="3"
          placeholder="Describe the condition of this bathroom"
          required
        ></textarea>
        <div class="valid-feedback">Looks Good!</div>
      </div>
      <div class="mb-3">
        <input type="file" name="image" id="" multiple />
        <!-- <label class="form-label" for="image">Image URL</label>
        <input class="form-control" name="bathroom[image]" required />
        <div class="valid-feedback">Looks Good!</div> -->
      </div>
      <div class="mb-3">
        <button class="btn btn-success">Add A Bathroom!</button>
      </div>
    </form>
  </div>
</div>
