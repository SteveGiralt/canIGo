<% layout('layouts/boilerplate') %>

<div class="row">
  <div class="col-6 offset-3">
    <div class="card mb-5" style="width: 18rem">
      <img
        src="<%= (bathroom.image ? bathroom.image : '/images/no_toilet_img.jpg') %>"
        class="card-img-top"
        alt="Image of Bathroom"
      />
      <div class="card-body">
        <h5 class="card-title"><%= bathroom.title %></h5>
        <p class="card-text">
          <% if (bathroom.description) { %> <%= bathroom.description %> <% } %>
        </p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item text-muted"><%= bathroom.location %></li>
        <li class="list-group-item text-muted"><%= bathroom.occupancy %></li>
      </ul>
      <div class="card-body">
        <form
          method="POST"
          action="/bathrooms/<%= bathroom._id %>?_method=DELETE"
        >
          <a
            class="btn btn-secondary"
            href="/bathrooms/<%= bathroom._id %>/edit"
            >Edit</a
          >
          <button class="btn btn-danger">Delete</button>
        </form>
      </div>
    </div>
  </div>
</div>
