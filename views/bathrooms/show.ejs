<% layout('layouts/boilerplate') %>

<link rel="stylesheet" href="/stylesheets/stars.css" />

<div class="row">
  <div class="col-6">
    <div id="bathroomCarousel" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-inner">
        <% bathroom.images.forEach((img, i) => { %>
        <div class="carousel-item <%= i === 0 ? 'active' : ''%>">
          <img src="<%= img.url %>" class="d-block w-100" alt="..." />
        </div>
        <% }) %>
      </div>
      <% if (bathroom.images.length > 1) { %>
      <button
        class="carousel-control-prev"
        type="button"
        data-bs-target="#bathroomCarousel"
        data-bs-slide="prev"
      >
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button
        class="carousel-control-next"
        type="button"
        data-bs-target="#bathroomCarousel"
        data-bs-slide="next"
      >
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
      <% } %>
    </div>

    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-title">
          <%= bathroom.title %>
          <span class="badge bg-secondary"><%= bathroom.occupancy %></span>
        </h5>
        <p class="card-text">
          <% if (bathroom.description) { %> <%= bathroom.description %> <% } %>
        </p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item text-muted"><%= bathroom.location %></li>
        <li class="list-group-item text-muted">
          Added by: <%= bathroom.author.username %>
        </li>
      </ul>
      <% if (currentUser && bathroom.author.equals(currentUser._id)) { %>

      <div class="card-body">
        <form
          method="POST"
          action="/bathrooms/<%= bathroom._id %>?_method=DELETE"
        >
          <a
            class="btn btn-secondary"
            href="/bathrooms/<%= bathroom._id %>/edit"
            >Edit</a
          >
          <button class="btn btn-danger">Delete</button>
        </form>
      </div>
      <% } %>
      <div class="card-footer text-muted">2 Days Ago</div>
    </div>
  </div>
  <div class="col-6">
    <% if (currentUser) { %>
    <h2 class="card-title">Leave a Review</h2>
    <div class="card-text">
      <form
        action="/bathrooms/<%=bathroom._id%>/reviews"
        method="POST"
        class="mb-3 validatedForm"
        novalidate
      >
        <div class="mb-3">
          <fieldset class="starability-growRotate">
            <input
              type="radio"
              id="first-rate1"
              name="review[rating]"
              value="1"
            />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input
              type="radio"
              id="first-rate2"
              name="review[rating]"
              value="2"
            />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input
              type="radio"
              id="first-rate3"
              name="review[rating]"
              value="3"
            />
            <label for="first-rate3" title="Average">3 stars</label>
            <input
              type="radio"
              id="first-rate4"
              name="review[rating]"
              value="4"
            />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input
              type="radio"
              id="first-rate5"
              name="review[rating]"
              value="5"
              checked
            />
            <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset>
          <!-- <label class="form-label" for="rating">Rating</label>
          <input
            class="form-range"
            type="range"
            min="1"
            max="5"
            name="review[rating]"
            id="rating"
          /> -->
        </div>
        <div class="mb-3">
          <label class="form-label" for="body">Review</label>
          <textarea
            class="form-control"
            name="review[body]"
            id="body"
            cols="30"
            rows="3"
            required
            placeholder="Share your experience..."
          ></textarea>
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please leave a review!</div>
        </div>

        <button class="btn btn-success">Submit</button>
      </form>
    </div>
    <% } else { %>
    <h2>Reviews:</h2>
    <%}%> <% for(let review of bathroom.reviews) { %>
    <div class="card mb-3">
      <div class="card-body">
        <p class="starability-result" data-rating="<%= review.rating %>">
          Rated: <%= review.rating %> stars
        </p>
        <h6 class="card-subtitle mb-2 text-muted fst-italic">
          By: <%= review.author.username %>
        </h6>
        <p class="card-text"><%= review.body %></p>
        <form
          action="/bathrooms/<%=bathroom._id%>/reviews/<%=review._id%>?_method=DELETE"
          method="POST"
        >
          <% if (currentUser && review.author.equals(currentUser._id)) { %>
          <button class="btn btn-sm btn-danger">Delete</button>
          <% } %>
        </form>
      </div>
    </div>
    <% } %>
  </div>
</div>
