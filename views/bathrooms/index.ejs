<% layout('layouts/boilerplate') %>
<h1 class="text-center">All Bathrooms</h1>

<% for(let bathroom of bathrooms) { %>
<div class="card mb-3">
  <div class="row">
    <div class="col-md-r">
      <img
        src="<%= (bathroom.image ? bathroom.image : '/images/no_toilet_img.jpg') %>"
        alt=""
        class="img-thumbnail img-fluid card-img-top"
      />
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">
          <%= bathroom.title %>
          <span class="badge bg-secondary"><%= bathroom.occupancy %></span>
        </h5>
        <p class="card-text"><%= bathroom.description %></p>
        <p class="card-text text-muted"><%= bathroom.location %></p>
        <a class="btn btn-primary" href="/bathrooms/<%= bathroom._id %> "
          >View</a
        >
      </div>
    </div>
  </div>
</div>
<% } %>
